<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome To My Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add a new item</a>
    <% if (currentUser.pantry.length === 0) { %>
      <p>There are no items in this pantry.</p>     
    <% } else { %>
    <ul>
      <% currentUser.pantry.forEach((ele) => { %>
        <li>
            <form action="/users/<%= user._id%>/foods/<%= ele._id%>?_method=DELETE" method="POST">
                <a href="/users/<%= user._id%>/foods/<%= ele._id %>/edit"><%= ele.name %></a>         
                <button type="submit">Delete Food</button>
            </form>
        </li>     
        <% }) } %>
    </ul>
  </body>
</html>
